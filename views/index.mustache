<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/public/main.css">
    <title></title>
  </head>
  <body>
    <form action="/create" method="post">
      <h1>ToDo List</h1>
      <input type="text" name="todo" placeholder="Add a todo...">
      <button type="submit">Add ToDo</button>
    </form>
    <hr>
    <form method="post" action="/complete">
      <h1>Tasks</h1>
      <ul name="list">
        {{#todos}}
        <li>
          {{title}}
          <button type="submit" name="todo" value="{{id}}">
            Mark As Complete
          </button>
        </li>
        {{/todos}}
      </ul>
      {{^todos}}
      <h2>Nothing To Do</h2>
      {{/todos}}
    </form>
  </body>
</html>
